doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='icon', href='#{pathToAssets}/docs/favicon.ico')
    title Profile
    link(href="https://fonts.googleapis.com/css?family=Droid+Sans|Open+Sans|Open+Sans+Condensed:300|PT+Sans+Narrow|Roboto|Trocchi", rel="stylesheet")
    style.
      .skill {
        filter: url("#gooey");
      }
  body
    -
      var skills = require("./data/skills.json")
      var projects = require("./data/projects.json")
    canvas#canvasBg
      div.canvas-fallback
    include ./templates/header.jade
    main.container
      include ./templates/about
      include ./templates/skills
      +displaySkills(skills)
      include ./templates/experience
      +displayExperiennce
      include ./templates/projects
      +displayProjects(projects)
      include ./templates/education
      +displayEducation